[Unit]
Description=Pastel Gateway API back-end server
After=network.target

[Service]
Restart=always
Restart=on-failure
RestartSec=10
Environment=PYTHONPATH=/home/ubuntu/gateway/backend/app
WorkingDirectory=/home/ubuntu/gateway/backend/app
ExecStart=/home/ubuntu/.local/bin/poetry run celery -A app.main.celery worker -Q cascade,sense,nft -n worker1@%h --loglevel=info
User=ubuntu
Group=ubuntu
KillSignal=SIGINT

[Install]
WantedBy=multi-user.target
